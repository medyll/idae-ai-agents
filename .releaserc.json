{
  "branches": [
    "main"
  ],
  "tagFormat": "v${version}",
  "plugins": [
    "@semantic-release/commit-analyzer",
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            {
              "type": "feat",
              "section": "üöÄ Features"
            },
            {
              "type": "fix",
              "section": "üêû Bug Fixes"
            },
            {
              "type": "perf",
              "section": "‚ö°Ô∏è Performance Improvements"
            },
            {
              "type": "revert",
              "section": "‚è™ Reverts"
            },
            {
              "type": "refactor",
              "section": "üî® Code Refactoring",
              "hidden": false
            },
            {
              "type": "docs",
              "section": "üìö Documentation",
              "hidden": false
            },
            {
              "type": "chore",
              "section": "‚öôÔ∏è Maintenance",
              "hidden": true
            }
          ]
        },
        "releaseRules": [
          {
            "type": "refactor",
            "release": "patch"
          },
          {
            "type": "docs",
            "scope": "README",
            "release": "patch"
          },
          {
            "type": "chore",
            "scope": "deps",
            "release": "patch"
          }
        ]
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": true
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [],
        "addReleases": "bottom"
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "packages/idae-agent-builder/CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "packages/idae-agent-full/CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "packages/idae-agent-svelte/CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "package.json",
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.name}@${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/exec",
      {
        "publishCmd": "node scripts/update-readme-version.js"
      }
    ]
  ]
}
